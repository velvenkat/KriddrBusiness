<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/head_month_year"
        android:fontFamily="@font/roboto_light"
        android:textSize="16sp"
        android:textColor="@color/invoice_value"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/head_invoice_name"
        android:layout_toRightOf="@+id/head_month_year"
        android:fontFamily="@font/roboto_light"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/head_month_year"
        android:textColor="@color/invoice_value"
        android:layout_toLeftOf="@+id/head_invoice_price"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/head_invoice_price"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textSize="16sp"
        android:layout_alignTop="@+id/head_invoice_name"
        android:textColor="@color/invoice_value"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

</RelativeLayout>