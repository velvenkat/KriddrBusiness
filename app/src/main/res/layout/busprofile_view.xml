<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="20dp"

    >
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="0dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/image_editlayout"
            android:layout_width="match_parent"
            android:background="#445259"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/business_image"
                android:layout_width="match_parent"
                android:layout_below="@+id/img_unLink"
                android:scaleType="fitCenter"
                android:layout_marginLeft="30dp"
                android:layout_toLeftOf="@+id/img_unLink"
                android:layout_marginBottom="30dp"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/img_unLink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:src="@drawable/edit_pro"
                android:layout_alignParentRight="true"

                android:layout_marginTop="10dp"
                android:focusable="true"
                />



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/profile_namelayout"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/image_editlayout"
            android:background="@drawable/shape_radius"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/name_value"
                android:paddingTop="10dp"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                />

            <TextView
                android:id="@+id/email_value"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:layout_below="@+id/name_value"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bus_details_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/profile_namelayout"
            android:paddingRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:layout_height="280dp">



            <TextView
                android:layout_above="@+id/bus_name_value"
                android:id="@+id/bus_name_text"
                android:textColor="@color/text_color"
                android:text="@string/bus_name"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/bus_name_value"
                android:layout_above="@+id/bus_phone_text"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:text="Thoughtful Paws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <TextView
                android:id="@+id/bus_phone_text"
                android:layout_above="@+id/bus_phone_value"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/business_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_above="@+id/address_textField"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:id="@+id/bus_phone_value"

                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/address_textField"
                android:layout_width="match_parent"
                android:textColor="@color/text_color"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                android:text="@string/business_address"
                android:layout_above="@+id/address_Value"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/address_Value"
                android:layout_alignParentBottom="true"
                android:text="@string/sampe_address"
                android:textSize="20sp"
                android:maxLines="2"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </RelativeLayout>


    </android.support.v7.widget.CardView>



</FrameLayout>