<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_above="@+id/create_profile"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


    <RelativeLayout
        android:id="@+id/camera_layout"
        android:layout_width="200dp"

        android:layout_height="200dp">


        <ImageView
            android:id="@+id/add_photo"
            android:src="@drawable/addphoto"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="200dp" />


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_below="@+id/camera_layout"
        android:layout_height="match_parent">





        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="30dp"

            android:layout_alignBottom="@+id/business_name"
            android:layout_alignTop="@+id/business_name"
            android:src="@drawable/businessname"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"/>


        <EditText
            android:id="@+id/business_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_icon"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/business_name"
            android:paddingLeft="15dp"
            android:selectAllOnFocus="true"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="textCapWords"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="30dp"
            android:layout_alignBottom="@+id/mobile"
            android:layout_alignTop="@+id/mobile"
            android:layout_below="@+id/profile_icon"
            android:src="@drawable/phone"
            android:layout_height="30dp"/>


        <EditText
            android:id="@+id/mobile"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/profile_icon"
            android:layout_toRightOf="@+id/phone_icon"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/phone"
            android:selectAllOnFocus="true"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:inputType="phone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />



        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="30dp"
            android:layout_alignBottom="@+id/address"
            android:layout_alignTop="@+id/address"
            android:layout_below="@+id/phone_icon"
            android:src="@drawable/address"
            android:layout_height="30dp"/>


        <EditText
            android:id="@+id/address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/phone_icon"
            android:layout_toRightOf="@+id/phone_icon"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/address"
            android:inputType="textCapSentences"
            android:selectAllOnFocus="true"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:id="@+id/rl_email_contr"
        >
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="30dp"
            android:layout_alignBottom="@+id/edt_email"
            android:layout_alignTop="@+id/edt_email"
            android:src="@drawable/email"
            android:layout_height="30dp"/>


        <EditText
            android:id="@+id/edt_email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/email_icon"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/address"
            android:selectAllOnFocus="true"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>
    </RelativeLayout>

    </LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/create_profile"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_bg"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp"
        android:text="@string/create_profile"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

</RelativeLayout>
