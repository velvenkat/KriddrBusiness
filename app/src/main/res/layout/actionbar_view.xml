<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="50dp">



    <ImageView
        android:id="@+id/img_actionBarBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/textBarTitle"
        android:layout_alignBottom="@+id/textBarTitle"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_actionBarBack"

        android:layout_toLeftOf="@+id/img_settings_menu"

        android:fontFamily="@font/robofont"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"

        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/textBarTitle"
        />

    <ImageView
        android:id="@+id/img_settings_menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/textBarTitle"
        android:layout_alignBottom="@+id/textBarTitle"
        android:visibility="invisible"
        android:layout_alignParentRight="true"

        app:srcCompat="@drawable/menusetting" />


</RelativeLayout>
