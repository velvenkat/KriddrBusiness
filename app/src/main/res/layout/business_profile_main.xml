<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgnd"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#22000000"
        android:layout_height="match_parent">

<include layout="@layout/busprofile_view">

</include>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/rl_prof_contr"
            android:background="@android:color/transparent"
            android:layout_height="280dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#ffffff"
                >
                <TextView
                    android:text="Business Records"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="18sp"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_below="@+id/business_record_text"
                android:layout_width="match_parent"
                android:id="@+id/rl_dfdf"
                android:layout_marginTop="10dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/img_plus_btn"
                    android:src="@drawable/add"
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp"/>



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lst_view"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_plus_btn"
                    android:layout_height="wrap_content"
                    />



                <ImageView
                    android:id="@+id/img_next_btn"
                    android:src="@drawable/next_btn"
                    android:layout_width="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>





    </LinearLayout>






</ScrollView>
